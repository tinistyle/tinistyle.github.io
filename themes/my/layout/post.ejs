<div class="post">
  <div class="info">
    <h1>
      <%- page.title %>
    </h1>
    <% if(page.categories.length>0){%>
    <span>
      分类：
      <% page.categories.forEach(cate=>{ %>
      <span><%- cate.name %></span>
      <% }) %>
    </span>
    <% } %>

    <span>
      标签：
      <% page.tags.forEach( tag=> { %>
      <span># <%- tag.name %></span>
      <% }) %>
    </span>

    <span>创建时间：<%- time_tag(page.date) %></span>
    <span>更新时间：<%- time_tag(page.updated) %></span>


  </div>
  <div><%- page.content %></div>
</div>